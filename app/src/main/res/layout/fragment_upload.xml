<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/complaint_background"
    tools:context=".ui.upload.UploadFragment">

    <TextView
        android:id="@+id/text_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.597" />

    <Button
        android:id="@+id/button_fire"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="212dp"
        android:background="@drawable/buttonbox"
        android:text="Fire"
        app:layout_constraintBottom_toTopOf="@+id/text_upload"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_earthquake"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="212dp"
        android:background="@drawable/buttonbox"
        android:text="Earthquake"
        app:layout_constraintBottom_toTopOf="@+id/text_upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_fire" />

    <Button
        android:id="@+id/button_kidnapping"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/buttonbox"
        android:text="Kidnapping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_fire" />

    <Button
        android:id="@+id/button_assult"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbox"
        android:layout_marginStart="45dp"
        android:layout_marginTop="29dp"
        android:text="Assult"
        app:layout_constraintStart_toEndOf="@+id/button_kidnapping"
        app:layout_constraintTop_toBottomOf="@+id/button_earthquake" />

    <Button
        android:id="@+id/button_robbery"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbox"
        android:layout_marginStart="65dp"
        android:layout_marginTop="38dp"
        android:text="Robbery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_kidnapping" />

    <Button
        android:id="@+id/button_accident"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbox"
        android:layout_marginStart="50dp"
        android:layout_marginTop="36dp"
        android:text="Accident"
        app:layout_constraintStart_toEndOf="@+id/button_robbery"
        app:layout_constraintTop_toBottomOf="@+id/button_assult" />

</androidx.constraintlayout.widget.ConstraintLayout>